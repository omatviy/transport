<%= form_for(@driver) do |f| %>
  <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
      <% @driver.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Ім'я" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :tel, "Телефон" %><br />
    <%= f.text_field :tel %>
  </div>
  <div class="field">
    <%= f.label :category_id, "Категорія"%><br />
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit "Створити/Оновити"%>
  </div>
<% end %>
